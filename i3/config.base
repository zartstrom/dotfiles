# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# lock the screen with i3lock. Memo: lock with "b"-lock
bindsym $mod+Shift+b exec $HOME/scripts/i3exit.sh lock

# use full path $HOME/scripts/i3exit.sh, seems to be more reliable.
# Look at i3 $PATH: `tr '\0' '\n' </proc/$(pidof i3)/environ | grep PATH`
# http://permalink.gmane.org/gmane.linux.debian.user/472626
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $HOME/scripts/i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id $HOME/scripts/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id $HOME/scripts/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id $HOME/scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id $HOME/scripts/i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $HOME/scripts/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+minus mode "$mode_system"


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

