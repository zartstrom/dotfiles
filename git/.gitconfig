[user]
  name = zartstrom
  email = phj.hitzler@gmail.com
[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
[alias]
  co = checkout
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lol = log --oneline --graph --decorate
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lh = "!sh -c 'git lg | head'"
  la = log --all --graph --oneline --decorate
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red 
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  helper = store
[merge]
  tool = meld
[push]
  default = current
